<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="org.alberto97.hisenseair.fragments.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/mainToDeviceControl"
            app:destination="@id/deviceControlFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="org.alberto97.hisenseair.fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/loginToMain"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="org.alberto97.hisenseair.fragments.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/splashToLogin"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/splashToMain"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/deviceControlFragment"
        android:name="org.alberto97.hisenseair.fragments.DeviceControlFragment">
        <argument
            android:name="dsn"
            app:argType="string" />
        <action
            android:id="@+id/deviceControlToDeviceSettings"
            app:destination="@id/devicePreferenceFragment" />
        <action
            android:id="@+id/actionDeviceControlFanSpeed"
            app:destination="@id/deviceFanSpeedSheet" />
        <action
            android:id="@+id/actionDeviceControlMode"
            app:destination="@id/deviceWorkModeSheet" />
        <action
            android:id="@+id/actionDeviceControlTemp"
            app:destination="@id/deviceTempControlSheet" />
    </fragment>
    <fragment
        android:id="@+id/devicePreferenceFragment"
        android:name="org.alberto97.hisenseair.fragments.DeviceSettings"
        android:label="@string/device_settings"
        tools:layout="@layout/fragment_settings">
        <argument
            android:name="dsn"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/deviceFanSpeedSheet"
        android:name="org.alberto97.hisenseair.bottomsheet.DeviceFanSpeedSheet"
        android:label="DeviceFanSpeedSheet" />
    <dialog
        android:id="@+id/deviceWorkModeSheet"
        android:name="org.alberto97.hisenseair.bottomsheet.DeviceWorkModeSheet"
        android:label="DeviceWorkModeSheet" />
    <dialog
        android:id="@+id/deviceTempControlSheet"
        android:name="org.alberto97.hisenseair.bottomsheet.DeviceTempControlSheet"
        android:label="DeviceTempControlSheet" />
</navigation>